<!DOCTYPE html>
<html>

	<head>
	  <title>Import excel (xlsx) files</title>
	</head>

	<body>
		<h1> Showing records for file: </h1>
		<div class=sum>
		</div>

		<br>
		<br>

		<!-- Show all friends  -->
		<table class="students_table"> 

			<!-- construct table head -->
			<thead>
				<tr>
					<% 1.upto(@excel.last_column) do |j| %>
						<th> <%= @excel.cell(1,j) %> </th>
					<% end %>
				</tr>
			</thead>
			
			<tbody>
				<!-- generate rows -->
				<% 2.upto(@excel.last_row) do |i| %>
					<tr>
						<!-- generate cells -->
						<% 1.upto(@excel.last_column) do |j| %>
							<td> <%= @excel.cell(i,j) %> </td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</body>
</html>
