<div class="row">
  <div class="span12"/>
    <%= form_for(@nominee, :html => {:class => "form-horizontal"}) do |f| %>
      <div class="span3 rtl">
      <% if @nominee.errors.any? %>
        <div class="alert alert-error" id="error_explanation">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <h5>ישנן שגיאות בהזנת הפרטים</h5>
          <ul>
          <% @nominee.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %> 
    </div>
      
        <div class="rtl Form span5" >
          <table class="table-bordered">
            <tr>
              <td> <%= Nominee.human_attribute_name("age") %> </td>
              <td> <%= f.number_field(:age, in: 10..99) %> </td>
            </tr>
            <tr>
              <td> <%= Nominee.human_attribute_name("city") %> </td>
              <td> <%= f.text_field :city %> </td>
            </tr>
            <tr>
              <td> <%= Nominee.human_attribute_name("school_grade") %> </td>
              <td> <%= f.number_field(:school_grade, in: 0..125) %> </td>
            </tr>
            <tr>
              <td> <%= Nominee.human_attribute_name("sat_grade") %> </td>
              <td> <%= f.number_field(:sat_grade, in: 300..800) %> </td>
            </tr>
            <tr>
              <td> <%= Nominee.human_attribute_name("math_units") %> </td>
              <td> <%= f.number_field(:math_units, in: 0..5) %> </td>
            </tr>
            <tr>
              <td> <%= Nominee.human_attribute_name("math_grade") %> </td>
              <td> <%= f.number_field(:math_grade, in: 0..125) %> </td>
            </tr>
            <tr>
              <td> <%= Nominee.human_attribute_name("english_units") %> </td>
              <td> <%= f.number_field(:english_units, in: 0..5) %> </td>
            </tr>
            <tr>
              <td> <%= Nominee.human_attribute_name("english_grade") %> </td>
              <td> <%= f.number_field(:english_grade, in: 0..125) %> </td>
            </tr>
          </table>
          <br/>
          <div class="actions">
            <%= f.submit :class => 'btn btn-success btn-large' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
