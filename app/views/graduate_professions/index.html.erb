<!DOCTYPE html>
<html>
    <head>
      <title> Gradutes Professions </title>
    </head>

    <body>
        <h3 dir=rtl> מספר בוגרים: <%= number_with_delimiter(@graduates_professions.count, :delimiter => ',') %> </h3>
        <!-- Show all friends  -->
        <table align="center" class='students_table'> 

            <thead>
                <tr>
                        <th> מזהה </th>
                        <th> מגדר </th>
                        <th> מצב משפחתי </th>
                        <th> מספר ילדים </th>
                        <th> עבודה נוכחית </th>
                        <th> חברה נוכחית </th>
                        <th> מיקום תואר שני </th>
                        <th> סוג תואר שני </th>
                        <th> שנות תואר שני </th>
                        <th> מיקום תואר שלישי </th>
                        <th> סוג תואר שלישי </th>
                        <th> שנות תואר שלישי </th>
                </tr>
            </thead>
            
            <tbody>
                <% @graduates_professions.each do |graduate_profession| %>
                        <tr>
                            <td> <%= graduate_profession.id_number %> </td>
                            <td> <%= graduate_profession.gender %> </td>
                            <td> <%= graduate_profession.marital_status %> </td>
                            <td> <%= graduate_profession.number_of_children %> </td>
                            <td> <%= graduate_profession.current_job %> </td>
                            <td> <%= graduate_profession.current_company %> </td>
                            <td> <%= graduate_profession.second_degree_institute %> </td>
                            <td> <%= graduate_profession.second_degree_type %> </td>
                            <td> <%= graduate_profession.second_degree_years %> </td>
                            <td> <%= graduate_profession.third_degree_institute %> </td>
                            <td> <%= graduate_profession.third_degree_type %> </td>
                            <td> <%= graduate_profession.third_degree_years %> </td>
                        </tr>
                <% end %>
            </tbody>

        </table>

    </body>
</html>
